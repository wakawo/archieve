<div class='container blog'>
  
  <p id="notice"><%= notice %></p>
  
  <h1>Listing Blogs</h1>
  
  <div class="container">
    <div id="new-blog-link">
      <%= link_to 'Create a new blog', new_blog_path %>
    </div>
    
    <div class="row">
      <% @blogs.each do |blog| %>
        <div class="col-xs-12 col-md-6 blog-panel">
          <div class="blog-panel">
            <h2><%= blog.title %></h2>
            <p><%= blog.content %></p>
            <p><%= blog.user.name %></p>
            <p><%= blog.created_at %></p>
            <div class="blog-links">
              <%= link_to 'Show', blog, class: 'btn btn-default' %>
              <%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-info' %> |
              <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class='panel panel-info panel-footer'>
    <%= link_to 'New Blog', new_blog_path, class: 'btn btn-primary' %>
  </div>
  
</div>