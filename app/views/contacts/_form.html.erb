<%= form_with(model: contact, url: contacts_confirm_path, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :mail %>
    <%= form.text_field :mail %>
  </div>
  
  <div class="field">
    <%= form.label :category %>
    <%= form.radio_button :category, 'archieve' %>Archieve
    <%= form.radio_button :category, 'text' %>Text
    <%= form.radio_button :category, 'briefing' %>Briefing
    <%= form.radio_button :category, 'other' %>Other
  </div>
  
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, :size => '40x10' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-info' %>
  </div>
<% end %>